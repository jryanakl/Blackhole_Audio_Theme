<aside class="bh-page pb-4">
  <h2>
    {{ section.settings.title }}
  </h2>
  <div class="">
    <h3>
      {{ section.settings.subtitle }}
    </h3>
    <div class="text-sm md:text-base">
      <p class="pt-1">{{ section.settings.description }}</p>
      <ul class="list-inside list-disc">
        <li>
          <a class="underline text-red-600 hover:no-underline" href="mailto:sales@blackhole-audio.com">
            sales@blackhole-audio.com
          </a>
        </li>
        <li>
          {% render 'contact-phone-link', link_class_list: 'text-red-600' %}
        </li>
      </ul>
    </div>
  </div>
</aside>

{% schema %}
{
  "name": "t:sections.dealers.name",
  "tag": "section",
  "class": "bh-main__page__section",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "t:sections.dealers.settings.title.label",
      "default": "Dealers"
    },
    {
      "type": "text",
      "id": "subtitle",
      "label": "t:sections.dealers.settings.subtitle.label",
      "default": "Contact us and make an appointment"
    },
    {
      "type": "inline_richtext",
      "id": "description",
      "label": "t:sections.dealers.settings.description.label",
      "default": "Based in the Dallas Fort Worth or Kansas City area? \nLet us coordinate an in-person demonstration of our amplifier for you."
    }
  ]
}
{% endschema %}
