<aside class="bh-blog">
  <h2>{{ blog.title }}</h2>
  <div class="mt-5">
    {% paginate blog.articles by section.settings.number_of_blog_posts %}
      <div class="max-w-6xl mx-auto">
        <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
          {% for article in blog.articles %}
            <div class="w-full py-6 px-3">
              <div class="bg-white shadow-xl rounded-md overflow-hidden">
                {% if article.image %}
                  <a href="{{ article.image.src }}">
                    <img
                      width="{{ article.image.width }}"
                      height="{{ article.image.height }}"
                      class="w-full h-36 object-cover"
                      src="{{ article.image | image_url: width: 533 }}"
                      alt="{{ article.image.src.alt | escape }}"
                    >
                  </a>
                {% else %}
                  {{ 'lifestyle-2' | placeholder_svg_tag: 'w-full h-80 object-cover bg-gray-100' }}
                {% endif %}

                <div class="p-4">
                  <h4 class="mb-2">{{ article.title }}</h4>

                  {% if article.excerpt.size > 0 %}
                    <p class="mb-3 text-sm">{{ article.excerpt | strip_html | truncatewords: 15 }}</p>
                  {% else %}
                    <p class="mb-3 text-sm">{{ article.content | strip_html | truncatewords: 15 }}</p>
                  {% endif %}

                  {% comment %} <a href="{{ article.url }}" class="font-medium underline text-red-600 hover:text-red-800 my-4 block">
                    {{ section.settings.blog_read_more }}
                  </a> {% endcomment %}
                  <a href="{{ article.url }}" class="text-sm inline-flex items-center px-3 py-2 text-sm font-medium text-center text-white bg-gray-700 rounded-lg hover:bg-gray-800 focus:ring-4 focus:outline-none focus:ring-red-300 dark:bg-red-600 dark:hover:bg-red-700 dark:focus:ring-red-800">
                    {{ section.settings.blog_read_more }}
                    <svg class="rtl:rotate-180 w-3.5 h-3.5 ms-2" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 14 10">
                        <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M1 5h12m0 0L9 1m4 4L9 9"/>
                    </svg>
                  </a>
                </div>
              </div>
            </div>
          {% endfor %}
        </div>
      </div>

      <div class="max-w-6xl mx-auto">
        {% render 'pagination', pagination: paginate %}
      </div>
    {% endpaginate %}
  </div>
</aside>

{% schema %}
{
  "name": "Main Blog",
  "tag": "section",
  "class": "bh-main__page__section",
  "settings": [
    {
      "default": "Read more",
      "id": "blog_read_more",
      "label": "Read more label",
      "type": "text"
    },
    {
      "default": 3,
      "id": "number_of_blog_posts",
      "label": "Blog posts per page",
      "min": 1,
      "max": 6,
      "step": 1,
      "type": "range"
    }
  ]
}
{% endschema %}
