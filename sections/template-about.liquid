<section class="bh-main__section max-w-md">
  {% comment %} <h2>{{ section.settings.title }}</h2>
  <div class="flex items-center justify-center">
    {% for block in section.blocks %}
      {% case block.type %}
        {% when 'about_image' %}
          <div class="max-w-7xl text-center">
            <img class="w-full h-80 md:h-96 object-cover object-center" src="{{ about.image | img_url: 'large'}}" alt="{{ about.image.alt }}" width="" height="">
          </div>
        {% when 'about_company' %}
          <div class="max-w-4xl">
            <p class="text-base md:text-xl leading-normal">
              Based in Dallas Texas, Black Hole Audio is a pioneering force in the home entertainment industry.
              Founded in 2023 by Jeff Julich, a former hardware engineer at Texas Instruments, our company is
              dedicated to crafting premium audio solutions for the modern home. Our flagship product, the
              M87 Amplifier, embodies our commitment to innovation and quality, offering consumers a
              transformative audio experience for their home theaters. With a focus on precision engineering and
              cutting-edge technology, Black Hole Audio is poised to redefine the way people enjoy sound in their
              living spaces
            </p>
          </div>
        {% else %}
      {% endcase %}
    {% endfor %}
  </div> {% endcomment %}
  About
</section>

{% schema %}
{
  "name": "Template About",
  "tag": "section",
  "class": "flex items-center justify-center text-center py-7 h-screen",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "About Heading Title"
    }
  ],
  "blocks": [
    {
      "type": "about_company",
      "name": "Company",
      "limit": 1
    },
    {
      "type": "about_image",
      "name": "Image",
      "limit": 1
    }
  ]
}
{% endschema %}
