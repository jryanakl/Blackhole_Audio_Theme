{% comment %}
  Renders animated banner for the home page

  Accepts:
  - heading {String} 
  - subheading {String}
  - button_label {String}
  - button_link {URL}
  
  Usage:
   {% render 'chart-thd',
      heading: settings.banner_heading,
      subheading: settings.banner_subheading,
      button_label: settings.banner_button_label,
      button_link: settings.banner_button_link 
   %}

  Links:
  - GSAP: https://gsap.com/
{% endcomment %}

{% comment %} <script src="{{ 'Banner.js' | asset_url }}" defer="defer"></script> {% endcomment %}
<script src="{{ 'Banner.js' | asset_url }}" defer="defer"></script>

<aside id="bh-banner" class="bh-banner bh-banner--bg-black-medium">
  <div class="bh-banner__box bg-black bg-opacity-40 flex flex-col items-center align-middle md:flex-row mb-10 md:mb-0 p-5 md:p-5">
    <div style="height: 400px; width: 420px; padding: 10px;">
      {% render 'banner-carousel-swipper' %}
    </div>
    <div id="bh-banner__content" class="md:ml-8">
      <!-- heading -->
      <h2 id="bh-banner__content--header" class="bh-banner__content--header text-white">
        {{ heading }}
      </h2>
      <!-- subheading -->
      <p id="bh-banner__content--sub-header" class="text-sm md:text-base text-gray-300">
        {{ subheading}}
      </p>
      <div id="bh-banner__content--button" class="mt-2 h-full pb-5">
        <!-- button_link -->
        <a href="{{ button_link }}" class="inline-flex items-center px-2.5 py-1.5 text-xs md:text-base font-medium text-center text-white border border-white rounded-lg hover:bg-white hover:text-gray-900 focus:ring-4 focus:outline-none focus:ring-gray-700">
          <!-- button_label -->
          {{ button_label }}
          <svg class="w-3 h-3 ms-2 rtl:rotate-180" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 14 10">
            <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M1 5h12m0 0L9 1m4 4L9 9"/>
          </svg>
        </a>
      </div>
    </div>
  </div>
</aside>
