{%- comment -%}
  Renders zoom button for lightbox on product page

  Accepts:
  - container_class {String}
  
  Usage: 
  {% render 'button-zoom', container_class: "relative bh-product__media__lightbox-button" %}

  Links:
  - GLightbox: https://github.com/biati-digital/glightbox/
{%- endcomment -%}

<div class="{{ container_class }}">
  <div class="bh-button-zoom absolute z-40 inset-x-0">
    <button id="bh-button-zoom__button" type="button"
            class="bh-button-zoom__button flex justify-center items-center w-[46px] h-[46px] text-gray-500 hover:text-gray-900 bg-white/50 rounded-full border border-gray-200 shadow-sm  hover:bg-gray-50">
      <span class="bh-icon fill-gray-800 hover:fill-gray-950">
        {% render 'icon-zoom-in' %}
      </span>
      <span class="sr-only">Zoom In</span>
    </button>
  </div>
</div>