<div class="bh-article-card w-full py-6 px-3">
  <div class="bg-white shadow-xl rounded-md overflow-hidden">
    {% if article.image %}
      <a href="{{ article.image.src }}">
        <img
          width="{{ article.image.width }}"
          height="{{ article.image.height }}"
          class="w-full h-36 object-cover"
          src="{{ article.image | image_url: width: 533 }}"
          alt="{{ article.image.src.alt | escape }}"
        >
      </a>
    {% else %}
      {{ 'lifestyle-2' | placeholder_svg_tag: 'w-full h-80 object-cover bg-gray-100' }}
    {% endif %}

    <div class="p-4">
      <h4 class="mb-2">{{ article.title }}</h4>

      {% if article.excerpt.size > 0 %}
        <p class="mb-3 text-sm">{{ article.excerpt | strip_html | truncatewords: 15 }}</p>
      {% else %}
        <p class="mb-3 text-sm">{{ article.content | strip_html | truncatewords: 15 }}</p>
      {% endif %}

      <a href="{{ article.url }}" class="">
        <button type="button" class="flex uppercase font-semibold text-gray-700 hover:text-white bg-white border border-gray-600 hover:bg-gray-900 focus:ring-4 focus:outline-none focus:ring-gray-300 font-medium rounded-lg text-sm px-5 py-2.5 text-center me-2 mb-2">
          {{ 'general.blogs.article.read_more' | t }}&nbsp;&nbsp;
          <span class="bh-icon fill-gray-500 hover:fill-white w-5 h-5">
            {% render 'icon-arrow-forward' %}
          </span>&nbsp;
        </button>
      </a>
    </div>
  </div>
</div>