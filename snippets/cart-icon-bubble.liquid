{% liquid
  if cart == empty
    render 'icon-shopping-cart'
  else
    render 'icon-shopping-cart-add'
  endif
%}
<span class="hidden">
  {{ 'templates.cart.cart' | t }}
</span>
{% if cart != empty %}
  <div class="bh-cart-count-bubble">
    {% if cart.item_count < 100 %}
      <span class="absolute top-0 ml-2 rounded-full text-white text-sm bg-gray-700 py-1 px-2" aria-hidden="true">
        {{ cart.item_count }}
      </span>
    {% endif %}
    <span class="hidden">
      {{ 'sections.header.cart_count' | t: count: cart.item_count }}
    </span>
  </div>
{% endif %}
