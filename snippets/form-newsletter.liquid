* Tags > Form: https://shopify.dev/docs/api/liquid/tags/form
* Customer Engagement > Email Consent: https://shopify.dev/docs/themes/customer-engagement/email-consent
{% endcomment %}

{% form 'customer', id: 'bh-newsletter-form', class: 'bh-newsletter-form flex flex-col align-middle justify-center' %}
  {% if form.posted_successfully? %}
    <!-- Success -->
    <div class="flex flex-col align-middle justify-center">
      <h3 class="text-sm md:text-md font-bold">
        {{ 'sections.footer.newsletter.form.thanks_for_signing_up' | t }}
      </h3>
    </div>
    <style>
      .bh-newsletter-form__fields {
        display: none;
      }
    </style>
  {% else %}
    <!-- Errors -->
    {% if form.errors %}
      <div class="flex flex-col align-middle justify-center">
        <h3 class="text-sm md:text-md font-bold text-red-800">
          {% for field_error in form.errors %}
            {{ field_error | capitalize }}: {{ form.errors[field_error] }}
          {% endfor %}
        </h3>
      </div>
    {% endif %}
    <div class="bh-newsletter-form__fields">
      <div class="flex flex-col align-middle justify-center">
        <h3 class="text-sm md:text-md font-bold pb-5">
          {{ 'sections.footer.newsletter.get_the_latest_news_offers' | t }}
        </h3>
        <div class="flex flex-row align-middle justify-center">
          <div class="">
            <label class="sr-only" for="email">
              {{ 'general.email' | t }}
            </label>
            <input class="text-xs w-60" type="email" name="contact[email]" placeholder="{{ 'sections.footer.newsletter.form.enter_your_email' | t }}" />
          </div>
          <button type="submit" class="text-xs font-semibold text-white uppercase bg-red-600 cursor-pointer px-4 w-auto hover:bg-black">
            {{ 'sections.footer.newsletter.sign_up' | t }}
          </button>
        </div>
      </div>
    </div>
  {% endif %}
{% endform %}
