{% comment %} 
  Storefront Password for MainPasswordHeader

  Usage:
  {% render 'form-password' %}
  
  Links:
  - Liquid Form Tags: https://shopify.dev/docs/api/liquid/tags/form
{% endcomment %}

{%- form 'storefront_password', class: 'password-form' -%}
  <div class="{% if form.errors %}{% endif %}">
    <input
      type="password"
      name="password"
      id="Password"
      class="text-xs w-60"
      autocomplete="current-password"
      {% if form.errors %}
        aria-invalid="true"
        aria-describedby="PasswordLoginForm-password-error"
      {%- endif -%}
      placeholder="{{ 'general.password_page.login_form_password_placeholder' | t }}"
    >
    <label class="" for="{{ 'general.password_page.login_form_password_label' | t }}">
      {{- 'general.password_page.login_form_password_placeholder' | t -}}
    </label>

    {%- if form.errors -%}
      <div id="PasswordLoginForm-password-error" role="status">
        <span class="hidden">{{ 'accessibility.error' | t }}</span>
        <span class="">
          {%- render 'icon-error' %}
          {{ 'general.password_page.login_form_error' | t -}}
        </span>
      </div>
    {%- endif -%}
  </div>
  <button name="commit" class="">
    {{ 'general.password_page.login_form_submit' | t }}
  </button>
{%- endform -%}