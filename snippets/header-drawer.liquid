{% comment %}
  Renders a header drawer menu for mobile and desktop.

  Usage:
  {% render 'header-drawer' %}
{% endcomment %}


<div id="mySidenav" class="sidenav pt-10">
  <a href="javascript:void(0)" class="closebtn bh-icon fill-white" onclick="closeNav()">
    {% render 'icon-close' %}
  </a>
  {% comment %} 
  <a href="#">About</a>
  <a href="#">Services</a>
  <a href="#">Clients</a>
  <a href="#">Contact</a>
  {% endcomment %}
  <ul clas="list text-base uppercase">
    {% for link in linklists['main-menu'].links %}
      <li class="text-white text-xs uppercase mb-4">
        <a href="{{ link.url }}">{{ link.title }}</a>
      </li>
    {% endfor %}
    {% for link in linklists['header-right-menu'].links %}
      <li class="text-white text-xs uppercase mb-4">
        <a href="{{ link.url }}">{{ link.title }}</a>
      </li>
    {% endfor %}
  </ul>
</div>
