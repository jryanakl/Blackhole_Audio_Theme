{% comment %}
  Renders gsap animated banner

  Usage:
  {% render 'main-page-banner' %}
{% endcomment %}
<script src="{{ 'banner.js' | asset_url }}" defer="defer"></script>
<section id="banner" class="bh-banner bh-banner--bg-black-medium">

  <div class="bh-banner__box bg-black bg-opacity-40 flex flex-col items-center align-middle md:flex-row mb-10 md:mb-0 p-5 md:p-5">
    <div style="height: 400px; width: 420px; padding: 10px;">
      {% render 'product-image-swiper' %}
    </div>
    <div id="banner__content" class="md:ml-8">
      <!-- header-text -->
      <h2 id="banner__content--header">
        <span class="text-white">Introducing the <span class="bh-text--red">M87</span> Power Amplifier</span>
      </h2>
    
      <!-- subheader-text -->
      <p class="text-sm md:text-base text-gray-300" id="banner__content--sub-header">
        A meticulously crafted high-powered two-channel amplifier featuring an exquisite wood-finished case, designed for exceptional sound performance<br />
      </p>

      <!-- banner-button -->
      <div id="banner__content--button" class="mt-2 h-full pb-5">
        <a href="/products/m87-amplifier">
          <button type="button" class="inline-flex items-center px-2.5 py-1.5 text-xs md:text-base font-medium text-center text-white border border-white rounded-lg hover:bg-white hover:text-gray-900 focus:ring-4 focus:outline-none focus:ring-gray-700">
            Learn More
            <svg class="w-3 h-3 ms-2 rtl:rotate-180" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 14 10">
              <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M1 5h12m0 0L9 1m4 4L9 9"/>
            </svg>
          </button>
        </a>
      </div>
    </div>

  </div>
</section>

