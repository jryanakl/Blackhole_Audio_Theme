{% comment %}
  Docs: https://shopify.dev/docs/api/liquid/objects/variant
  Example: https://shopify.dev/docs/themes/product-merchandising/variants
{% endcomment %}

{% assign current_variant = product.selected_or_first_available_variant %}
{% assign jsonFormatted = current_variant | json %}

<div class="hidden">
  <code>current_variant:</code>
  <pre style="width: 250x; overflow: scroll; height: 200px;">
    {{ jsonFormatted  }}
  </pre>
</div>

<!-- Variant selector -->

<aside>
  <label for="product-variant" class="bh-label font-semibold text-sm md:text-base">Select Your Case:</label>
  <div>
    <select name="product-variant">
      {% for variant in product.variants %}
        <option value="{{ variant.id }}"
                {% if variant == current_variant %}
                selected="selected"
                {% endif %}
                data-price="{{ variant.price }}">
          {{ variant.title }}
        </option>
      {% endfor %}
    </select>
  </div>
</aside>
