<ul class="{{ ul_class }} {{ icon_class }}">
  {% if settings.social_facebook_link != blank %}
  <li class="{{ li_class }}">
    <a class="underline" href="{{ settings.social_facebook_link }}">
      <span class="sr-only">
        {{ 'sections.footer.social.facebook' | t }}
      </span>
      <i class="bh-icon {{ icon_class }}">
        {% render 'icon-facebook' %}
      </i>
    </a>
  </li>
  {% endif %}
  {% if settings.social_youtube_link != blank %}
