      <span class="sr-only">
        {{ 'sections.footer.social.instagram' | t }}
      </span>
      <i class="bh-icon {{ icon_class }}">
        {% render 'icon-instagram' %}
      </i>
    </a>
  </li>
  {% endif %}
  {% if settings.social_twitter_link != blank %}
  <li class="{{ li_class }}">
    <a class="underline" href="{{ settings.twitter_link }}">
      <span class="sr-only">
        {{ 'sections.footer.social.twitter' | t }}
      </span>
      <i class="bh-icon {{ icon_class }}">
        {% render 'icon-twitter' %}
      </i>
    </a>
  </li>
  {% endif %}
</ul>
