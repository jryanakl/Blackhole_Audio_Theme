        {{ 'sections.footer.social.youtube' | t }}
      </span>
      <i class="bh-icon {{ icon_class }}">
        {% render 'icon-youtube' %}
      </i>
    </a>
  </li>
  {% endif %}
  {% if settings.social_instagram_link != blank %}
